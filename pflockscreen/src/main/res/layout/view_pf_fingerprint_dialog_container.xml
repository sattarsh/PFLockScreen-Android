<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/corner_dialog"
    android:layout_gravity="center"
    android:padding="12dp"
    android:orientation="vertical">

    <FrameLayout
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_margin="12dp"
        android:layout_height="wrap_content">

        <include layout="@layout/view_pf_fingerprint_dialog_content" />

    </FrameLayout>

    <LinearLayout
        android:gravity="center"
        android:layout_gravity="center"
        android:id="@+id/buttonPanel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingStart="12dp"
        android:paddingEnd="12dp"
        android:paddingTop="4dp"
        android:paddingBottom="4dp"
        style="?android:attr/buttonBarStyle">

        <Space
            android:id="@+id/spacer"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:visibility="invisible" />
        <Button
            android:background="@drawable/bg_btn_next"
            android:gravity="center"
            android:layout_gravity="center"
            android:textSize="12sp"
            android:text="انصراف"
            android:textColor="@color/color_text_btn_next_pf"
            android:id="@+id/cancel_button"
            style="?android:attr/buttonBarNegativeButtonStyle"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/size_btn_dialog_pf" />

    </LinearLayout>

</LinearLayout>